<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carCargoDemandItem"
    android:elevation="5dp"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/museosans700"
                android:layout_weight="0.2"
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text View"></TextView>

            <TextView
                android:layout_weight="0.2"
                android:fontFamily="@font/museosans700"

                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text View"></TextView>

            <TextView
                android:layout_weight="0.2"
                android:fontFamily="@font/museosans700"

                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text View"></TextView>


            <TextView
                android:layout_weight="0.2"
                android:fontFamily="@font/museosans700"

                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text View"></TextView>

            <TextView
                android:layout_weight="0.2"
                android:fontFamily="@font/museosans700"

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text View"></TextView>




        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carImage"
                android:layout_gravity="center_vertical"
                android:src="@drawable/carlogo"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookBT"
                android:fontFamily="@font/museosans700"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/arrowright"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/loginbuttonbg"
                android:text="Book"
                android:textAllCaps="false"
                tools:ignore="RtlCompat" />



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>